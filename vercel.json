{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/trading/index.js": { "maxDuration": 60 },
    "api/trading/health-check.js": { "maxDuration": 60 }
  }
}
