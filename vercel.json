{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/trading/health-check",
      "destination": "/api/trading?health-check=true"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/trading/index.js": { "maxDuration": 300 },
    "api/trading/diagnostics.js": { "maxDuration": 30 }
  }
}
